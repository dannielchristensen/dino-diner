<Page x:Class="PointOfSale.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Page1">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Grid.Column="0"
                Content="Combo"
                Click="Combo_Click" FontSize="36" >
        </Button>
        <Button 
            Grid.Row="1"
            Grid.Column="0"
            Content="Sides"
            Click="Sides_Click" FontSize="36">
            
        </Button>
        <Button 
            Grid.Row="1"
            Grid.Column="1"
            Content="Drinks"
            Click="Drinks_Click" FontSize="36" >
            
        </Button>
        <Button 
            Grid.Row="0"
            Grid.Column="1"
            Content="Entrees"
            Click="Entrees_Click" FontSize="36">
            
        </Button>
    </Grid>
</Page>
